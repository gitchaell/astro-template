{
	"name": "astro-template",
	"type": "module",
	"version": "1.0.0",
	"author": {
		"email": "f.michaell.a.m@gmail.com",
		"name": "Michaell Alavedra",
		"url": "https://michaellalavedra.com"
	},
	"keywords": [
		"astro",
		"template"
	],
	"repository": {
		"url": "https://github.com/gitchaell/astro-template"
	},
	"scripts": {
		"dev": "astro dev",
		"build": "astro check && astro build",
		"preview": "astro preview",
		"astro": "astro",
		"format": "npx prettier . --write",
		"lint": "npx eslint .",
		"lint:fix": "npx eslint . --fix",
		"lint:css": "npx stylelint \"**/*.css\"",
		"lint:css:fix": "npx stylelint \"**/*.css\" --fix",
		"test": "vitest",
		"test:e2e": "npx playwright test",
		"test:e2e:report": "npx playwright show-report .playwright/reports"
	},
	"dependencies": {
		"@astrojs/check": "^0.9.4",
		"@astrojs/sitemap": "^3.2.1",
		"@astrojs/ts-plugin": "^1.10.4",
		"@tailwindcss/vite": "^4.0.4",
		"@vercel/analytics": "^1.5.0",
		"astro": "^5.2.5",
		"tailwindcss": "^4.0.4",
		"typescript": "^5.7.3"
	},
	"devDependencies": {
		"@commitlint/cli": "^19.7.1",
		"@commitlint/config-conventional": "^19.7.1",
		"@eslint/js": "^9.20.0",
		"@playwright/test": "^1.50.1",
		"@types/node": "^22.13.1",
		"@typescript-eslint/parser": "^8.23.0",
		"eslint": "^9.20.0",
		"eslint-config-prettier": "^10.0.1",
		"eslint-plugin-astro": "^1.3.1",
		"eslint-plugin-prettier": "^5.2.3",
		"globals": "^15.14.0",
		"lint-staged": "^15.4.3",
		"prettier": "^3.5.3",
		"prettier-plugin-astro": "^0.14.1",
		"prettier-plugin-tailwindcss": "^0.6.11",
		"stylelint": "^16.14.1",
		"stylelint-config-standard": "^37.0.0",
		"stylelint-config-tailwindcss": "^1.0.0",
		"stylelint-prettier": "^5.0.3",
		"typescript-eslint": "^8.23.0",
		"vitest": "^3.0.5"
	},
	"lint-staged": {
		"**/*.{astro,js,jsx,ts,tsx}": [
			"eslint --max-warnings=0",
			"prettier --write"
		],
		"**/*.{html,json,css,md,mdx}": [
			"prettier -w"
		]
	}
}
