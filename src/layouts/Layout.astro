---
import '@/styles/global.css'
import { ClientRouter } from 'astro:transitions'
import Analytics from '@vercel/analytics/astro'
import Favicon from '@/components/Favicon.astro'
import SEO from '@/components/SEO.astro'

interface Props {
	title: string
	description: string
	domain?: string
}

const { title, description, domain = 'https://lorem.vercel.app' } = Astro.props
---

<!doctype html>
<html lang='en'>
	<head>
		<meta charset='UTF-8' />
		<meta
			name='description'
			content={description}
		/>
		<meta
			name='viewport'
			content='width=device-width'
		/>
		<Favicon />
		<meta
			name='generator'
			content={Astro.generator}
		/>
		<title>{title}</title>

		<link
			rel='preconnect'
			href='https://rsms.me/'
		/>
		<link
			rel='stylesheet'
			href='https://rsms.me/inter/inter.css'
		/>

		<SEO
			name='Astro Template'
			title={title}
			description={description}
			image={{ src: 'https://lorem.vercel.app/opengraph.png', alt: 'Opengraph Image' }}
			twitter={{ handle: 'handle' }}
			og={{ type: 'website' }}
			canonicalURL={new URL(Astro.request.url, Astro.site)}
		/>
		<ClientRouter />
	</head>

	<body class='bg-gray-900'>
		<slot />
		<Analytics />
	</body>
</html>
